<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="40dp"
    android:paddingTop="30dp"
    tools:context=".activities.EditNameActivity">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your name here"
        android:textSize="27sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please fill the fields below"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginBottom="150dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:gravity="center_horizontal">

        <EditText
            android:id="@+id/CURRENT_PASSWORD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:hint="Enter current password"
            android:textSize="27sp"
            android:paddingHorizontal="8dp"/>

        <EditText
            android:id="@+id/FIRST_NAME_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:hint="Enter first name"
            android:textSize="27sp"
            android:paddingHorizontal="8dp"/>

        <EditText
            android:id="@+id/MIDDLE_NAME_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:hint="Enter middle name"
            android:textSize="27sp"
            android:paddingHorizontal="8dp"/>

        <EditText
            android:id="@+id/LAST_NAME_TXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:hint="Enter last name"
            android:textSize="27sp"
            android:paddingHorizontal="8dp"/>

        <Button
            android:id="@+id/EDIT_DETAILS_BTN"
            android:layout_width="240dp"
            android:layout_height="55dp"
            android:textStyle="normal"
            android:text="Edit my name"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/app_color_rounded_bg_no_stroke"
            android:layout_marginTop="35dp"/>

      </LinearLayout>

    </ScrollView>

  </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>