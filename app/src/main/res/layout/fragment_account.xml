<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:background="@drawable/account_screen"
    tools:context=".fragments.AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="160dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/FULL_NAME"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Firstname Lastname"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/COURSE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="COURSE"
                android:textSize="22sp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:gravity="center">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/TOTAL_ATTENDANCE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:maxLines="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">

                    <TextView
                        android:id="@+id/TOTAL_EARLY_ATTENDANCE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0/0"
                        android:textSize="25sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Early Attendance"
                        android:textSize="15sp"
                        android:textStyle="normal"
                        android:textColor="@color/black"
                        android:maxLines="1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="300dp"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/EDIT_NAME"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/rounded_stroke_bg_white"
                    android:text="Edit name"
                    android:textSize="20sp"
                    style="@style/CardView.Light"
                    android:maxLines="1"
                    />

                <Button
                    android:id="@+id/RESET_PASSWORD"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rounded_stroke_bg_white"
                    android:text="Reset Password"
                    android:textSize="20sp"
                    style="@style/CardView.Light"
                    android:maxLines="1"
                    />

                <Button
                    android:id="@+id/UPDATE_FACE"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/rounded_stroke_bg_white"
                    android:text="Update Face"
                    android:textSize="20sp"
                    style="@style/CardView.Light"
                    android:maxLines="1"
                    />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>