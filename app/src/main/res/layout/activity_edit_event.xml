<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/event_scheduler"
    tools:context=".activities.admin.EditEventActivity">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="104dp"
        android:text="Edit the event of"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/HOSTED_BY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="host"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/fill_fields"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@+id/HOSTED_BY"
        app:layout_constraintTop_toBottomOf="@+id/HOSTED_BY" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="96dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4">

            <EditText
                android:id="@+id/EVENT_TITLE"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/baseline_title_24"
                android:drawablePadding="5dp"
                android:hint="Enter new event title"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/EVENT_DATE"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/baseline_calendar_month_24"
                android:drawablePadding="5dp"
                android:hint="Pick a new date"
                android:inputType="date"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:cursorVisible="false"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/EVENT_TIME"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/baseline_more_time_24"
                android:drawablePadding="5dp"
                android:hint="Pick a new time"
                android:inputType="text"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:cursorVisible="false"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/EVENT_LOCATION"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/location_logo"
                android:drawablePadding="5dp"
                android:hint="Pick a new location"
                android:inputType="text"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:cursorVisible="false"
                android:textSize="23sp" />

            <EditText
                android:id="@+id/DEPARTMENT_AND_COURSE"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/department"
                android:drawablePadding="5dp"
                android:hint="Pick new dept. and course"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:cursorVisible="false"
                android:textSize="23sp"/>

            <EditText
                android:id="@+id/STATUS"
                android:layout_width="351dp"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:drawableStart="@drawable/status"
                android:drawablePadding="5dp"
                android:hint="Pick a new status"
                android:inputType="text"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:focusable="false"
                android:cursorVisible="false"
                android:layout_marginBottom="700dp"
                android:textSize="23sp" />

        </LinearLayout>

    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="@color/app_color"/>

    <Button
        android:id="@+id/EDIT_EVENT"
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/app_color_round_white_stroked"
        android:text="Edit Event"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck"
        android:elevation="0dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>